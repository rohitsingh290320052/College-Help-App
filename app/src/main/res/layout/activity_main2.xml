<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/another"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you are near Ab7, Ab8, Ab3, Ab1, Ab2, then contact any of these and press confirm"
            android:textColor="#0E0E0E"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/rohit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ROHIT"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#121111"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/tushar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TUSHAR"
            android:textSize="16dp"
            android:textColor="#0C0C0C"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you are near Ab9, Ab10, CSED, then contact here and press confirm"
            android:textColor="#0E0E0E"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/kovid"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="KOVID"
            android:textColor="#090909"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you are near Ab4, Ab5, Ab6 then contact here and press confirm"
            android:textColor="#070000"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/hemang"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="HEMANG"
            android:textColor="#0E0E0E"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>


    </LinearLayout>


</LinearLayout>
